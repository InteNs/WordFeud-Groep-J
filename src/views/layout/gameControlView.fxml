<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<Tab text="spelbestuur" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="views.gameControlView">
    <VBox stylesheets="@style.css" spacing="5.0">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <Spinner fx:id="turnSpinner" prefHeight="50.0" prefWidth="999999.0"/>
        <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
            <effect>
                <DropShadow blurType="GAUSSIAN" height="9.14" radius="4.07" width="9.14"/>
            </effect>
            <Button fx:id="playButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="9999999.0" text="Speel"/>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="9999999.0" text="Shuffle"/>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="9999999.0" text="Clear"/>
            <Button fx:id="extraFunctionsButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="9999999.0"
                    text="Overig">
                <contextMenu>
                    <ContextMenu fx:id="contextMenu" anchorLocation="CONTENT_TOP_RIGHT" anchorX="0.0" anchorY="0.0"
                                 x="0.0" y="0.0">
                        <items>
                            <CustomMenuItem hideOnClick="false" mnemonicParsing="false" text="Unspecified Action">
                                <content>
                                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Jokers"/>
                                </content>
                            </CustomMenuItem>
                            <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                                <content>
                                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Ruilen"/>
                                </content>
                            </CustomMenuItem>
                            <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                                <content>
                                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Opgeven"/>
                                </content>
                            </CustomMenuItem>
                            <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                                <content>
                                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Pass"/>
                                </content>
                            </CustomMenuItem>
                            <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                                <content>
                                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0"
                                            text="Pot" onAction="#showPot"/>
                                </content>
                            </CustomMenuItem>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </Button>
        </HBox>
        <HBox alignment="CENTER" prefWidth="0.0" VBox.vgrow="NEVER">
            <VBox alignment="CENTER">
                <Label fx:id="player1ScoreLabel" text="Player1:Score"/>
                <Label fx:id="player2ScoreLabel" text="Player2:Score"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="potLabel" text="Aantal letters in pot:15"/>
        </HBox>
        <TabPane fx:id="gameTabs" VBox.vgrow="ALWAYS">
            <Tab closable="false" text="Spelhistorie">
                <ListView fx:id="turnList" fixedCellSize="25.0"/>
            </Tab>
            <Tab fx:id="chatTab" closable="false" text="Chat">
                <VBox spacing="5">
                    <ListView fx:id="chatList" VBox.vgrow="ALWAYS"/>
                    <HBox>
                        <TextArea fx:id="chatTextArea" wrapText="true" prefHeight="50.0" prefWidth="0.0" HBox.hgrow="ALWAYS"/>
                        <Button defaultButton="true" onAction="#sendMessage" mnemonicParsing="false"
                                prefHeight="50.0" prefWidth="50.0"
                                text="stuur"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</Tab>
