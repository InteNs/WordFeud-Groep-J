<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CompetitionListView">
   <children>
      <TextField fx:id="filterField" promptText="filter..." />
      <Accordion fx:id="accordion" VBox.vgrow="ALWAYS">
          <panes>
              <TitledPane animated="true" text="Mijn competitie">
                  <content>
                      <ListView fx:id="myCompetition" prefHeight="200.0" prefWidth="200.0" />
                  </content>
              </TitledPane>
              <TitledPane animated="true" text="Alle competities">
                  <content>
                      <ListView fx:id="competitionList" prefHeight="200.0" prefWidth="200.0" />
                  </content>
              </TitledPane>
          </panes>
      </Accordion>
      <Button fx:id="createCompetition" onAction="#createCompetition" alignment="CENTER" mnemonicParsing="false" text="Competitie aanmaken" />
   </children>
</VBox>
