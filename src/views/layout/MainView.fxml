<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainView">
    <ToolBar fx:id="toolBar" disable="true" prefHeight="40.0" prefWidth="200.0">
        <ToggleButton mnemonicParsing="false" onAction="#toggleControl" text="verstop tabs" />
        <Button mnemonicParsing="false" onAction="#refresh" text="herladen" />
        <Button mnemonicParsing="false" onAction="#showPasswordChangeView" text="wachtwoord wijzigen" />
        <Button mnemonicParsing="false" onAction="#logOut" text="uitloggen" />
      <ProgressIndicator fx:id="loadIndicator" prefHeight="20.0" prefWidth="20.0" visible="false" />
    </ToolBar>
    <SplitPane fx:id="mainContent" dividerPositions="0.5" minWidth="1000.0" VBox.vgrow="ALWAYS">
        <TabPane fx:id="control" minHeight="600.0" minWidth="300.0" rotateGraphic="true" tabClosingPolicy="UNAVAILABLE"
                 SplitPane.resizableWithParent="false">
            <fx:include fx:id="gameListView" source="GameListView.fxml"/>
            <fx:include fx:id="userListView" source="UserList.fxml"/>
            <fx:include fx:id="competitionListView" source="CompetitionListView.fxml"/>
        </TabPane>
        <VBox minHeight="600.0" minWidth="600.0" SplitPane.resizableWithParent="false">
            <Region maxHeight="-Infinity" minHeight="-Infinity" prefHeight="34.0" styleClass="tab-aligned" />
            <StackPane fx:id="content" VBox.vgrow="ALWAYS">
                <fx:include fx:id="loginView" source="LoginView.fxml"/>
                <fx:include fx:id="welcomeView" source="WelcomeView.fxml"/>
                <fx:include fx:id="gameBoardView" source="GameBoardView.fxml"/>
                <fx:include fx:id="registerView" source="RegisterView.fxml"/>
                <fx:include fx:id="userInfoView" source="UserInfoView.fxml"/>
                <fx:include fx:id="createCompetitionView" source="CreateCompetitionView.fxml"/>
                <fx:include fx:id="passwordChangeView" source="PasswordChangeView.fxml"/>
            </StackPane>
        </VBox>
    </SplitPane>
</VBox>
