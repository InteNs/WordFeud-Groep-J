<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainView">
    <ToolBar prefHeight="40.0" prefWidth="200.0">
        <ToggleButton mnemonicParsing="false" onAction="#toggleControl" prefWidth="60.0" text="hide" />
    </ToolBar>
    <SplitPane fx:id="mainContent" dividerPositions="0.5" minWidth="1000.0" VBox.vgrow="ALWAYS">
        <TabPane fx:id="control" minHeight="600.0" minWidth="300.0" rotateGraphic="true" tabClosingPolicy="UNAVAILABLE" SplitPane.resizableWithParent="false">
            <Tab text="test" />
            <Tab onSelectionChanged="#refresh" text="Games">
                <fx:include fx:id="gameListView" source="GameListView.fxml" />
            </Tab>
            <Tab onSelectionChanged="#refresh" text="Gebruikers">
                <fx:include fx:id="userListView" source="UserList.fxml" />
            </Tab>
            <Tab onSelectionChanged="#refresh" text="Competities">
                <fx:include fx:id="competitionListView" source="CompetitionListView.fxml" />
            </Tab>
        </TabPane>
        <VBox minHeight="600.0" minWidth="600.0" SplitPane.resizableWithParent="false">
            <HBox alignment="CENTER_LEFT" minHeight="28.0" styleClass="tab-aligned" />
            <StackPane fx:id="content" VBox.vgrow="ALWAYS">
                <children>
                    <fx:include fx:id="loginView" source="LoginView.fxml" />
                    <fx:include fx:id="welcomeView" source="WelcomeView.fxml" />
                    <fx:include fx:id="registerView" source="RegisterView.fxml" />
                  </children>
            </StackPane>
        </VBox>
    </SplitPane>
</VBox>
